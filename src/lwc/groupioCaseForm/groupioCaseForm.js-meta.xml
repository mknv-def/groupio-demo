<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default, lightning__AppPage">
            <property
                name="predefinedReason"
                type="String"
                label="Predefined Case Reason"
                description="Determines case type and visible fields. Options: 'General Inquiry', 'Business Group Onboarding', 'Merchandiser Application', 'Proposal Approval Request'"
                default="General Inquiry"
            />
            <property
                name="cardTitle"
                type="String"
                label="Card Title"
                default="Submit a Request"
            />
            <property
                name="accountId"
                type="String"
                label="Account ID"
                description="Optional: Pre-fill Account lookup"
            />
            <property
                name="proposalId"
                type="String"
                label="Proposal ID"
                description="Optional: Link to Group Buy Proposal (for Proposal Approval Request)"
            />
            <property
                name="orderId"
                type="String"
                label="Order ID"
                description="Optional: Link to Order (for Standard Inquiry)"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>